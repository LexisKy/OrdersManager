@using OrdersManager.ViewModels
@model EditUserViewModel

<form method="post" asp-action="EditUserFromAdmin" enctype="multipart/form-data">
    <input type="hidden" id="Id" name="Id" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Image">Profile Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
    </div>
    
    <div class="form-group">
        <label asp-for="Password" class="control-label">New Password</label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Email" class="control-label">New Email</label>
        <input type="email" asp-for="Email" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>